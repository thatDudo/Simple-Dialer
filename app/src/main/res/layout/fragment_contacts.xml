<?xml version="1.0" encoding="utf-8"?>
<com.simplemobiletools.dialer.fragments.ContactsFragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contacts_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/dialpad_coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        android:animateLayoutChanges="true">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/top_app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/main_app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:layout_constraintVertical_weight="100"
                android:background="@null"
                app:collapsedTitleGravity="left"
                app:expandedTitleGravity="center|top"
                app:title="Telefon"
                app:titleEnabled="true"
                app:expandedTitleTextColor="@color/transparent"
                app:titleCollapseMode="fade"
                app:contentScrim="@color/transparent">

                <TextView
                    android:id="@+id/dialpad_title"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="60dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    app:layout_collapseMode="pin"
                    android:text="@string/contacts_tab"
                    android:textAlignment="center"
                    android:textSize="@dimen/dialpad_title_size"
                    android:textStyle="bold"/>

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/top_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_gravity="bottom"
                    app:layout_collapseMode="pin"
                    app:menu="@menu/menu"
                    app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
                    app:titleTextAppearance="@style/AppTheme.ActionBar.TitleTextStyle" />
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:id="@+id/page_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="85"
            android:focusableInTouchMode="true"
            android:background="@drawable/tile_background"
            android:clipToOutline="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <include layout="@layout/fragment_letters_layout" />

        </RelativeLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</com.simplemobiletools.dialer.fragments.ContactsFragment>
